<h1>Checkout</h1>

<%= form_tag checkout_path, method: :post do %>
  <div class="form-group">
    <label for="address_id">Select Address:</label>
    <%= select_tag 'address_id', options_from_collection_for_select(@address_options, 'id', 'full_address') %>
  </div>

  <h2>Order Summary:</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.line_items.each do |line_item| %>
        <tr>
          <td><%= line_item.product.name %></td>
          <td><%= number_to_currency(line_item.product.total_price) %></td>
          <td><%= line_item.quantity %></td>
          <td><%= number_to_currency(line_item.product.total_price * line_item.quantity) %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">Total Price:</th>
        <th><%= number_to_currency(@total_price) %></th>
      </tr>
    </tfoot>
  </table>

  <%= submit_tag 'Place Order', class: 'btn btn-primary' %>
<% end %>