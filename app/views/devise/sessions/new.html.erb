<div class="container-fluid ps-md-0">
  <div class="row g-0">
    <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>
    <div class="col-md-8 col-lg-6">
      <div class="login d-flex align-items-center py-5">
        <div class="container">
          <div class="row">
            <div class="col-md-9 col-lg-8 mx-auto">
              <h3 class="login-heading mb-4 fw-medium fs-1 welcome-text">Welcome back!</h3>

              <!-- Sign In Form -->
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "mb-3 col-9"}) do |f| %>
                <div class="form-floating mb-3">
                  <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", class: "form-control input", id:"floatingInput",placeholder:"name@example.com"%>
                  <%= f.label :email,  for:"floatingInput" %>
                </div>
                <div class="form-floating mb-3">
                  <%= f.password_field :password,required: true, autocomplete: "current-password", class: "form-control input", id: "exampleInputPassword1", type:"password",id:"floatingPassword",placeholder:"Password" %>
                  <%= f.label :password, for:"floatingPassword" %>
                </div>

                <div class="form-check mb-3">
                  <%= f.check_box :remember_me, class: "form-check-input", id: "exampleCheck1", type:"checkbox", id:"rememberPasswordCheck"%>
                  <%= f.label :remember_me, class: "form-check-label", for: "rememberPasswordCheck" %>
                </div>
                <%= render "devise/shared/links" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
