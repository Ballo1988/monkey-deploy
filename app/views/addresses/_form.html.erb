<div class="row offset-md-3 col-md-6">
  <%= form_for(@address) do |f| %>
    <%= render "/devise/shared/error_messages", resource: @address %>
    <div class="my-3">
      <%= f.label :city %>
      <%= f.text_field :city, class: "w-100 form-control" %>
    </div>

    <div>
      <%= f.label :state %>
      <%= f.text_field :state, class: "w-100 form-control" %>
    </div>

    <div class="my-3">
      <%= f.label :zip_code %>
      <%= f.number_field :zip_code, class: "w-100 form-control" %>
    </div>

    <div>
      <%= f.label :address %>
      <%= f.text_area :address, class: "w-100 form-control" %>
    </div>

    <div class="my-3">
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, class: "w-100 form-control" %>
    </div>

    <div class="text-center my-5">
      <%= f.submit "Save Address", class: "btn btn-login text-uppercase fw-bold" %>
      <% if @address.persisted? %>
        <%= button_to 'Delete',  address_path(address), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger text-uppercase fw-bold mx-2 p-2' %>
      <% end %>

      <%= link_to "Back to Profile", user_path(current_user), class: "btn btn-secondary text-uppercase fw-bold p-2" %>
    </div>
  <% end %>
</div>
