<div class="container">
  <div class="row text-center">
    <h1 class="my-5 login-heading mb-4 fw-medium fs-1 fw-light">Products</h1>
  </div>

  <!-- Mover la paginación aquí, arriba de la tabla -->
  <%= will_paginate @products, params: { controller: 'products', action: 'index' } %>

  <div id="products" class="table-responsive">
    <table class="table table-hover text-center">
      <thead>
        <tr class="d-none d-md-table-row">
          <!-- Encabezados de la tabla aquí -->
        </tr>
      </thead>
      <tbody class="text-center">
        <%= render @products %>
      </tbody>
    </table>
  </div>
  <% if current_user.usertype == 'admin' %>
    <div class="text-center my-3">
      <%= link_to "New product", new_product_path, class: "btn custom-button text-uppercase fw-bold" %>
    </div>
  <% end %>
</div>
