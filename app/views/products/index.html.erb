<p style="color: green" class="text-center mt-3"><%= notice %></p>

<div class="container">
  <div class="row text-center">
    <h1 class="my-5 login-heading mb-4 fw-medium fs-1 fw-light">Products</h1>
  </div>

  <div id="products">
    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Description</th>
          <th>Product Type</th>
          <th>Brand</th>
          <th>Size</th>
          <th>Base Price</th>
          <th>Discount</th>
          <th>Total Price</th>
          <th>Stock</th>
          <th>Availability</th>
          <th>Show</th>
        </tr>
      </thead>
      <tbody class="text-center">
        <%= render @products %>
      </tbody>
    </table>
  </div>

  <div class="text-center my-3">
    <%= link_to "New product", new_product_path, class: "btn custom-button text-uppercase fw-bold" %>
  </div>

</div>
