<div class="container">
  <div class="row text-center">
    <h1 class="login-heading mb-4 fw-medium fs-1 fw-light my-md-5">Order Details</h1>
  </div>

  <div class="row my-4">
    <div class="col-md-6 offset-md-3">
      <div class="card mb-4">
        <div class="card-body">
          <h2 class="login-heading fw-medium fs-3 fw-light">Order Number</h2>
          <p><%= @order.id %></p>

          <h2 class="login-heading fw-medium fs-3 fw-light">Order Date</h2>
          <p><%= @order.created_at %></p>

          <h2 class="login-heading fw-medium fs-3 fw-light">Shipping Address</h2>
          <p><%= @order.address.full_address %></p>

          <h2 class="login-heading fw-medium fs-3 fw-light">Status</h2>
          <p><%= @order.status %></p>

          <h2 class="login-heading fw-medium fs-2 fw-light text-center mb-3">Order Summary</h2>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Price</th>
                  <th>Quantity</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                <% @order.order_items.each do |order_item| %>
                  <tr>
                    <td><%= order_item.product.name %></td>
                    <td><%= number_to_currency(order_item.price) %></td>
                    <td class="text-center"><%= order_item.quantity %></td>
                    <td><%= number_to_currency(order_item.price * order_item.quantity) %></td>
                  </tr>
                <% end %>
              </tbody>
              <tfoot>
                <tr>
                  <th colspan="3">Total Price:</th>
                  <th><%= number_to_currency(@order.total_price) %></th>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>

      <%= link_to "Back to Profile", user_path(current_user), class: 'btn btn-primary d-block mx-auto col-6' %>
    </div>
  </div>
</div>
